    <filter-mapping>
        <filter-name>MiltonFilter</filter-name>
        <url-pattern>/webdav/*</url-pattern>
    </filter-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
  
</web-app>